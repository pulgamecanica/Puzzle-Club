<div class="jumbotron bg-light p-2 admin-jumbotron">
  <h1 class="display-4">Hello, <%= current_admin.email.split('@').first %>!</h1>
  <p class="lead">You have [<%= link_to @total_notifications.to_s, notifications_path %>] notifications.</p>
  <hr class="my-4">
  <p class="lead">Total Puzzles: <%= @puzzles.count %></p>
  <p class="lead">Active Torunaments: <%= @tournaments.select { |tournament| tournament.active }.count %></p>
  <p class="lead">Total Torunaments: <%= @tournaments.count %></p>
  <p class="lead">Total Votes: <%= @tournaments.map { |x| x.votes.count }.sum %></p>
  <p class="lead">Total Contributors: <%= @contributors.count %></p>
  <p class="lead">
    <%= link_to "Website", root_path, class: "btn btn-primary btn-lg" %>
  </p>
</div>