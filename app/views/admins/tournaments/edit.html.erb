<div class="card m-0 p-0 no-border-card">
    <div class="d-flex justify-content-around">
      <%= link_to 'Back', tournaments_path, class: 'btn btn-dark m-3 col-2' %>
      <%= link_to @tournament, class: 'btn btn-dark m-3 col-2' do %>
        <span class="material-icons">visibility</span>
      <% end %>
    </div>
  <div class="card-body text-center">
    <h2 class="card-title">Editing Tournament</h2>
    <h6 class="card-subtitle mb-2 text-muted">Edit carefully all fields...</h6>
    <%= render 'form', tournament: @tournament %>
  </div>
</div>